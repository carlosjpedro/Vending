
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProductSelectionViewModel

<h1>Select Product</h1>
<div class="container col-8">


    <form asp-action="Select">
        @foreach (var product in Model.Products)
        {
            <div class="row mt-1">
                <input type="hidden" name="productId" value="@product.Id" />
                <input type="hidden" name="workflowStepId" value="@Model.WorkflowStepId" />
                <div class="col-6">
                    <span>@product.Name</span>
                </div>
                <div class="col-3">
                    <span>@((product.Price / 100.0m).ToString("0.00")) €</span>
                </div>
                <div class="col-3">
                    <input type="submit" class="btn btn-primary" value="Select" />
                </div>
            </div>
        }
        <div class="row mt-2">
            <div class="col-9">
                @if (Model.ErrorMessage != null)
                {
                    <span class="alert alert-danger">@Model.ErrorMessage</span>
                }
                else
                {
                    <span>&nbsp;</span>
                }
            </div>
            <div class="col-3">
                <button class="btn btn-danger" value="Cancel" asp-action="Cancel" asp-route-stepId="@Model.WorkflowStepId">Cancel</button>
            </div>
        </div>
    </form>
</div>

